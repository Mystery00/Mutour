<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_list_view_height"
                android:layout_margin="@dimen/item_list_view_margin">

    <ImageView
        android:id="@+id/item_head"
        android:layout_width="@dimen/item_list_view_height"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/item_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_more"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/item_list_view_margin"
        android:layout_marginStart="@dimen/item_list_view_margin"
        android:layout_toEndOf="@id/item_head"
        android:layout_toStartOf="@id/item_more"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/item_list_view_text_size"/>

</RelativeLayout>