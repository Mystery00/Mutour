<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/nav_item_height"
              android:layout_marginTop="@dimen/item_list_view_margin_top"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_menu_img"
        android:layout_width="@dimen/nav_item_height"
        android:layout_height="@dimen/nav_item_height"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/item_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_item_height"
        android:layout_marginStart="@dimen/nav_item_margin_start"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/nav_item_text_size"/>

</LinearLayout>